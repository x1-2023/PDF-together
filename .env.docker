# Docker Compose Environment Variables
# Copy to .env and fill in your values:
# cp .env.docker .env

# Discord Credentials (REQUIRED)
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Server Configuration
NODE_ENV=production

# Ports (customize if needed)
FRONTEND_PORT=8080
BACKEND_PORT=3001

# Your VPS/Domain (REQUIRED - change this!)
DOMAIN=your-vps-ip-or-domain

# Backend URLs (will use DOMAIN above)
VITE_BACKEND_URL=http://your-vps-ip-or-domain:3001
VITE_BACKEND_WS_URL=ws://your-vps-ip-or-domain:3001
CORS_ORIGIN=http://your-vps-ip-or-domain:8080

# PDF Upload Limit (in bytes)
# 50MB = 52428800
# 100MB = 104857600
# 200MB = 209715200
MAX_FILE_SIZE=52428800
