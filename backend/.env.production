# Server Configuration
PORT=3001
NODE_ENV=production

# Security
# Allowed origins for CORS (The domain where your frontend runs)
CORS_ORIGIN=https://pdf.0xit.me

# Discord App Credentials (REQUIRED)
# Get these from Discord Developer Portal -> Applications -> OAuth2
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here

# Storage
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=52428800
DB_PATH=./data/discord-pdf.db
